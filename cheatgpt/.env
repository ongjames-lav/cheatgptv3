# Example environment variables for cheatgpt
FLASK_ENV=development
DATABASE_URL=sqlite:///cheatgpt.db
SECRET_KEY=replace-me

# YOLO Configuration - Updated to medium models for better accuracy
YOLO_MODEL_PATH=weights/yolo11m.pt
POSE_MODEL_PATH=weights/yolo11m-pose.pt
FORCE_CPU=false

# Pose Detection Thresholds
LEAN_ANGLE_THRESH=20.0
HEAD_TURN_THRESH=30.0
PHONE_IOU_THRESH=0.3

# Policy Rules Configuration
BEHAVIOR_REPEAT_WINDOW=10.0
ALERT_PERSIST_FRAMES=5
PHONE_REPEAT_THRESH=3
