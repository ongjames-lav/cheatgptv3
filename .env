# CheatGPT3 Environment Configuration
# 
# This file contains environment variables for configuring the CheatGPT3 system.
# Copy this file to .env in your project root to activate these settings.

# =============================================================================
# ROBOFLOW DATASET CONFIGURATION
# =============================================================================

# Roboflow API key for downloading the cheating dataset
# Get your API key from: https://app.roboflow.com/
ROBOFLOW_API_KEY=3QKD7i5f7sdAgXvYoG8v

# Roboflow dataset configuration
ROBOFLOW_WORKSPACE=rp-fcesi
ROBOFLOW_PROJECT=cheating-n3uwx
ROBOFLOW_VERSION=1

# =============================================================================
# POLICY ENGINE CONFIGURATION
# =============================================================================

# Time window for behavior analysis (seconds)
BEHAVIOR_REPEAT_WINDOW=5.0

# Number of consecutive frames needed to trigger an alert (lower = more sensitive)
ALERT_PERSIST_FRAMES=2

# Number of suspicious behaviors needed with phone use to trigger cheating alert
PHONE_REPEAT_THRESH=1

# =============================================================================
# POSE DETECTION CONFIGURATION  
# =============================================================================

# Angle threshold for detecting leaning (degrees, lower = more sensitive)
LEAN_ANGLE_THRESH=2.5

# Angle threshold for detecting head turning/looking around (degrees, lower = more sensitive)  
HEAD_TURN_THRESH=12.0

# IoU threshold for phone proximity detection (lower = more sensitive)
PHONE_IOU_THRESH=0.05

# Confidence threshold for pose keypoint detection
POSE_CONFIDENCE_THRESH=0.25

# =============================================================================
# TEMPORAL CHEATING DETECTION
# =============================================================================

# Duration threshold for sustained cheating detection (seconds)
TEMPORAL_CHEATING_THRESHOLD=12.0

# Enable temporal cheating detection (true/false)
TEMPORAL_CHEATING_ENABLED=true

# Cooldown duration to prevent spam alerts (seconds)
CHEATING_COOLDOWN_DURATION=30.0

# =============================================================================
# DEBUG AND LOGGING
# =============================================================================

# Enable debug logging for policy engine (true/false)
DEBUG_POLICY=true

# Enable debug logging for pose detection (true/false)  
DEBUG_POSE=true

# Enable debug logging for engine (true/false)
DEBUG_ENGINE=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Force CPU usage even if GPU is available (true/false)
FORCE_CPU=false

# Model paths (relative to project root) - Updated to medium models for better accuracy
YOLO_MODEL_PATH=cheatgpt/weights/yolo11m.pt
POSE_MODEL_PATH=cheatgpt/weights/yolo11m-pose.pt

# =============================================================================
# VISUALIZATION CONFIGURATION
# =============================================================================

# Enable real-time visualization overlays (true/false)
ENABLE_VISUALIZATION=true

# Show behavior indicators (L=Lean, H=Head, P=Phone) (true/false)
SHOW_BEHAVIOR_INDICATORS=true

# Show track IDs on bounding boxes (true/false)
SHOW_TRACK_IDS=true
