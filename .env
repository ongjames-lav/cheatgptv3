# CheatGPT3 Ultra-Sensitive Configuration for Enhanced Detection

# Policy Engine - More responsive detection
BEHAVIOR_REPEAT_WINDOW=2.5
ALERT_PERSIST_FRAMES=2
PHONE_REPEAT_THRESH=2

# Pose Detection - More sensitive anatomical thresholds
LEAN_ANGLE_THRESH=8.0
HEAD_TURN_THRESH=18.0
PHONE_IOU_THRESH=0.2
POSE_CONFIDENCE_THRESH=0.4

# Debug Logging - Enable pose debugging to see angle calculations
DEBUG_POLICY=false
DEBUG_POSE=true
DEBUG_ENGINE=false

# Performance
FORCE_CPU=false

# Model paths
YOLO_MODEL_PATH=cheatgpt/weights/yolo11n.pt
POSE_MODEL_PATH=cheatgpt/weights/yolo11n-pose.pt

# Visualization
ENABLE_VISUALIZATION=true
SHOW_BEHAVIOR_INDICATORS=true
SHOW_TRACK_IDS=true
